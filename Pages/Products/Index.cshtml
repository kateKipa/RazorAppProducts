@page
@model WebRazorAppProducts.Pages.Products.IndexModel
@{
}

<h2 class="text-center mb-4"> List of Products </h2>
<table class="table table-success table-striped table-hover table-bordered text-center">
    <thead>
        <tr>
            <th colspan="6">Products</th>
        </tr>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Products != null)
        {
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price €</td>
                    <td> <a class="btn btn-primary" href="/Products/@product.Id/Edit">Edit</a></td>
                    <td><a class="btn btn-primary" href="javascript:void(0)" onclick="confirmDelete(@product.Id)">Delete</a></td>
                </tr>
            }
        }
    </tbody>

</table>

<div class="text-center">
   <a class="btn btn-primary btn-lg mt-4" href="/Products/Create">Create a new Product</a></button>
</div>

<div>
    @if (Model.ErrorObj is not null)
    {
        <p>@Model.ErrorObj.Message</p>
    }
</div>

<script src="~/js/product.js"></script>
